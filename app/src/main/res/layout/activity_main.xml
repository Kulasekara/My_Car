<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002984"
    tools:actionBarNavMode="standard"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/mainList"
        android:layout_width="400dp"
        android:layout_height="523dp"
        android:layout_marginTop="10dp"
        android:background="#002984"
        android:cacheColorHint="#C61616"
        android:scrollbarSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtupcoming">

    </ListView>

    <TextView
        android:id="@+id/txtupcoming"
        android:layout_width="412dp"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:fontFamily="@font/acme"
        android:gravity="center_horizontal|center_vertical"
        android:shadowColor="#2196F3"
        android:text="UPCOMING EVENTS"
        android:textAlignment="center"
        android:textColor="#002984"
        android:textColorHint="#882A2A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="47dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainList">

        <ImageView
            android:id="@+id/homebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/homebar" />

        <ImageView
            android:id="@+id/bellbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/bellbar2" />

        <ImageView
            android:id="@+id/listbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/listbar" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>